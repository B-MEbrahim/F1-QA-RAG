# ============ API Keys ============
# NVIDIA API Key (REQUIRED for embeddings and LLM)
NVIDIA_API_KEY=nvapi-your_nvidia_api_key_here

# Optional: HuggingFace token (if using HF models)
# HUGGINGFACEHUB_API_TOKEN=your_huggingface_token_here

# Optional: OpenAI key (if using OpenAI models)
# OPENAI_API_KEY=your_openai_key_here

# ============ Model Settings ============
# Embedding model (using NVIDIA NIM)
EMBEDDING_MODEL=nvidia/nv-embedqa-e5-v5

# LLM settings (using NVIDIA NIM)
LLM_PROVIDER=nvidia
LLM_MODEL=mistralai/mixtral-8x7b-instruct-v0.1
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1024

# ============ Retrieval Settings ============
RETRIEVER_K=5
DEFAULT_REGULATION_YEAR=2026

# ============ Chunking Settings ============
CHUNK_SIZE=400
CHUNK_OVERLAP=80

# ============ Server Settings ============
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
